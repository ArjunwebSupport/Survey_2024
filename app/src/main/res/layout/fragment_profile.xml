<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:id="@+id/relativell"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/survey_logo"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/app_src_main_res_drawable_user_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/nametv"
                android:fontFamily="@font/roboto_bold"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/loc1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name "
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/address"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/callicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number "
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/phonnumber"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/emailid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address "
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/emailid"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_yellow_bg"
                android:text="Logout"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
